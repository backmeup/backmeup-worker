<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>backmeup-worker</display-name>
  
  <servlet>
  	<servlet-name>backmeup-worker</servlet-name>
  	<servlet-class>org.backmeup.worker.app.servlet.WorkerServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>backmeup-worker</servlet-name>
  	<url-pattern>/worker</url-pattern>
  </servlet-mapping>
  
</web-app>
